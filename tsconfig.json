{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,      
    "esModuleInterop": true,
    "skipLibCheck": true,   
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "ts-node-dev": {
    "require": ["tsconfig-paths/register"]
  }
}
